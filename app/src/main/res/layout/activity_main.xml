<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="449dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="88dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="105dp"
            android:layout_height="112dp"
            android:onClick="plusOne"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="93dp"
            android:layout_height="88dp"
            android:onClick="plusOne"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo3"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:onClick="plusOne"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo4"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:onClick="plusOne"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo5"
            android:layout_width="136dp"
            android:layout_height="118dp"
            android:onClick="plusOne"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo6"
            android:layout_width="147dp"
            android:layout_height="95dp"
            android:onClick="plusOne"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo7"
            android:layout_width="146dp"
            android:layout_height="115dp"
            android:onClick="plusOne"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo8"
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:onClick="plusOne"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo9"
            android:layout_width="91dp"
            android:layout_height="95dp"
            android:onClick="plusOne"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo10"
            android:layout_width="135dp"
            android:layout_height="113dp"
            android:onClick="plusOne"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo11"
            android:layout_width="91dp"
            android:layout_height="102dp"
            android:onClick="plusOne"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logo12"
            android:layout_width="95dp"
            android:layout_height="92dp"
            android:onClick="plusOne"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/logo" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="151dp"
        android:layout_height="35dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:text="Score : ?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="142dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"

        android:background="@drawable/button_restart"
        android:onClick="restart"
        app:layout_constraintEnd_toEndOf="@+id/textView_finish"
        app:layout_constraintStart_toStartOf="@+id/textView_finish"
        app:layout_constraintTop_toBottomOf="@+id/textView_finish" />

    <TextView
        android:id="@+id/textView_finish"
        android:layout_width="306dp"
        android:layout_height="116dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="monospace"
        android:text="Time : 10 second"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="monospace"
        android:text="Time : 20 second"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_time"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/line"
/>

    <ImageView
        android:id="@+id/line_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back" />

</androidx.constraintlayout.widget.ConstraintLayout>